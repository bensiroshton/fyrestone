    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: png2asm",
            "type": "python",
            "request": "launch",
            "program": "src/png2asm.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-i", "../data/temp/*-indexed.png",
                "-o", "../platform-genesis/src/data",
                "-w"
            ]
        },
        {
            "name": "Python: mkfont",
            "type": "python",
            "request": "launch",
            "program": "src/mkfont.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-f", "WillowBody CYR",
                "-o", "../platform-genesis/src/data",
                "-w",
                "-bg", "0",
                "-fg", "13"
            ]
        }
    ]
}